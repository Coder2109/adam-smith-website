---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Adam Smith Music';
const description = 'The perfect starter for your perfect blog.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Adam Smith Music</h1>
      <p>
        I am a passionate pianist and composer from Sawbridgeworth, UK.
        I began playing the piano at the age of 5 and quickly fell in love with
        the instrument. I knew then that I wanted to start using it to write,
        produce and perform my own music.      
      </p>
    </div>

    <div class="hero-image-container">
      <picture>
        <img class="hero-image" alt="" src="/assets/adam-smith-music-photo-1.jpg" width="500" height="500">
      </picture>
      <p class="caption">
        Broken. - EP album cover art.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
